<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef>
    <defName>ASReportsPrinter</defName>
    <label>trade reports printer</label>
	<thingClass>RWAutoSell.ASReportsPrinter</thingClass>
	<category>Building</category>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <description>Records and applies trading rules for this colony.  There can only be one trade printer or log per colony</description>
    <graphicData>
		<texPath>Things/Buildings/ReportingPrinter</texPath>
		<graphicClass>Graphic_Multi</graphicClass>	  
		<shaderType>CutoutComplex</shaderType>
		<drawSize>(1.8,0.9)</drawSize>
		<damageData>
			<cornerTL>Damage/Corner</cornerTL>
			<cornerTR>Damage/Corner</cornerTR>
			<cornerBL>Damage/Corner</cornerBL>
			<cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>	
    <size>(2,1)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <building>
      <workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <unpoweredWorkTableWorkSpeedFactor>0.5</unpoweredWorkTableWorkSpeedFactor>
    </building>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.3</fillPercent>    
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
	  <Mass>20</Mass>
      <WorkToMake>3000</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
	<stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>25</Steel>      
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <comps>
	<!--	<li Class="RWAutoSell.CompProperties_AutoSeller">
			<compClass>RWAutoSell.Comp_AutoSeller</compClass>
			<requirespower>true</requirespower>
		</li>-->
		<li>
			<compClass>CompReportWorkSpeed</compClass>
		</li>	  
		<li Class="CompProperties_Power">
			<compClass>CompPowerTrader</compClass>
			<shortCircuitInRain>true</shortCircuitInRain>
			<basePowerConsumption>100</basePowerConsumption>
        </li>
		<li Class="CompProperties_Flickable"/>
    </comps>	
	<placeWorkers>
		<li>RWAutosell.PlaceWorker_OnePerMap</li>
		<li>PlaceWorker_ReportWorkSpeedPenalties</li>		
	</placeWorkers>
	<inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	<surfaceType>Item</surfaceType>
  </ThingDef>    
  
    <ThingDef>
    <defName>ASReportsLog</defName>
    <label>trade reports log</label>
