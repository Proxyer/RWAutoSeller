    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <description>A primitive log that records and applies trading rules for this colony.  There can only be one trade printer or log per colony.</description>
    <graphicData>
		<texPath>Things/Buildings/ReportsLog</texPath>
		<graphicClass>Graphic_Single</graphicClass>	  
		<shaderType>Transparent</shaderType>
