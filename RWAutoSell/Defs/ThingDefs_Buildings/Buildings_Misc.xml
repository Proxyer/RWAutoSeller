		<damageData>
			<cornerTL>Damage/Corner</cornerTL>
			<cornerTR>Damage/Corner</cornerTR>
			<cornerBL>Damage/Corner</cornerBL>
			<cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>	
    <size>(1,1)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
	<building>
			<workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
			<workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
	      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>		    	
	</building>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.3</fillPercent>    
    <designationCategory>Misc</designationCategory>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>3000</WorkToMake>
	  <Mass>20</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <WoodLog>150</WoodLog>    
	  <Steel>1</Steel>
    </costList>
    <comps>
	<!--	<li Class="RWAutoSell.CompProperties_AutoSeller">
			<compClass>RWAutoSell.Comp_AutoSeller</compClass>
			<requirespower>false</requirespower>
		</li>-->
		<li>
			<compClass>CompReportWorkSpeed</compClass>
		</li>	  		
    </comps>	
	<placeWorkers>
		<li>RWAutosell.PlaceWorker_OnePerMap</li>
		<li>PlaceWorker_ReportWorkSpeedPenalties</li>		
	</placeWorkers>
	<inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	<surfaceType>Item</surfaceType>
  </ThingDef>    
  
</Defs>